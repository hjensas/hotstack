[Unit]
Description=HotStack-OS Glance Image Service
Documentation=https://github.com/openstack-k8s-operators/hotstack
After=hotstack-os-mariadb.service hotstack-os-keystone.service hotstack-os-dnsmasq.service hotstack-os-haproxy.service
Requires=hotstack-os-mariadb.service hotstack-os-keystone.service hotstack-os-dnsmasq.service hotstack-os-haproxy.service
PartOf=hotstack-os.target

[Service]
Type=simple
Restart=always
RestartSec=10

ExecStartPre=-/usr/bin/podman rm -f hotstack-os-glance
ExecStart=/usr/bin/podman run \
    --pull=never \
    --name hotstack-os-glance \
    --hostname glance \
    --network hotstack-os \
    --ip __GLANCE_IP__ \
    --env GLANCE_DB_PASSWORD=__DB_PASSWORD__ \
    --env SERVICE_PASSWORD=__SERVICE_PASSWORD__ \
    --env KEYSTONE_ADMIN_PASSWORD=__KEYSTONE_ADMIN_PASSWORD__ \
    --env REGION_NAME=__REGION_NAME__ \
    --volume __HOTSTACK_DATA_DIR__/runtime/config/glance/glance-api.conf:/etc/glance/glance-api.conf:ro,z \
    --volume __HOTSTACK_DATA_DIR__/glance/images:/var/lib/glance/images:U,z \
    localhost/hotstack-os_glance:latest

# Health check: CONTAINER INTERVAL TIMEOUT RETRIES START_PERIOD COMMAND
ExecStartPost=/usr/local/bin/hotstack-healthcheck.sh hotstack-os-glance 10 5 5 5 curl -f http://localhost:9292/
ExecStop=/usr/bin/podman stop -t 10 hotstack-os-glance
ExecStopPost=-/usr/bin/podman rm -f hotstack-os-glance

StandardOutput=journal
StandardError=journal

[Install]
WantedBy=hotstack-os.target
