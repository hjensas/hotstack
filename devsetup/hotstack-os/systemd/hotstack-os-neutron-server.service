[Unit]
Description=HotStack-OS Neutron Server Service
Documentation=https://github.com/openstack-k8s-operators/hotstack
After=hotstack-os-mariadb.service hotstack-os-rabbitmq.service hotstack-os-keystone.service hotstack-os-ovn-northd.service hotstack-os-dnsmasq.service hotstack-os-haproxy.service
Requires=hotstack-os-mariadb.service hotstack-os-rabbitmq.service hotstack-os-keystone.service hotstack-os-ovn-northd.service hotstack-os-dnsmasq.service hotstack-os-haproxy.service
PartOf=hotstack-os.target

[Service]
Type=simple
Restart=always
RestartSec=10

ExecStartPre=-/usr/bin/podman rm -f hotstack-os-neutron-server
ExecStart=/usr/bin/podman run \
    --pull=never \
    --name hotstack-os-neutron-server \
    --hostname neutron \
    --network hotstack-os \
    --ip __NEUTRON_SERVER_IP__ \
    --env NEUTRON_DB_PASSWORD=__DB_PASSWORD__ \
    --env SERVICE_PASSWORD=__SERVICE_PASSWORD__ \
    --env KEYSTONE_ADMIN_PASSWORD=__KEYSTONE_ADMIN_PASSWORD__ \
    --env RABBITMQ_USER=__RABBITMQ_DEFAULT_USER__ \
    --env RABBITMQ_PASS=__RABBITMQ_DEFAULT_PASS__ \
    --env REGION_NAME=__REGION_NAME__ \
    --volume __HOTSTACK_DATA_DIR__/runtime/config/neutron/neutron.conf:/etc/neutron/neutron.conf:ro,z \
    --volume __HOTSTACK_DATA_DIR__/runtime/config/neutron/plugins/ml2/ml2_conf.ini:/etc/neutron/plugins/ml2/ml2_conf.ini:ro,z \
    --entrypoint /usr/local/bin/neutron-server-entrypoint.sh \
    localhost/hotstack-os-neutron:latest

# Health check: CONTAINER INTERVAL TIMEOUT RETRIES START_PERIOD COMMAND
ExecStartPost=/usr/local/bin/hotstack-healthcheck.sh hotstack-os-neutron-server 10 5 5 5 curl -f http://localhost:9696/
ExecStop=/usr/bin/podman stop -t 10 hotstack-os-neutron-server
ExecStopPost=-/usr/bin/podman rm -f hotstack-os-neutron-server

StandardOutput=journal
StandardError=journal

[Install]
WantedBy=hotstack-os.target
