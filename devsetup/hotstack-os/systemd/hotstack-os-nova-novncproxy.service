[Unit]
Description=HotStack-OS Nova NoVNC Proxy Service
Documentation=https://github.com/openstack-k8s-operators/hotstack
After=hotstack-os-nova-api.service
Requires=hotstack-os-nova-api.service
PartOf=hotstack-os.target

[Service]
Type=simple
Restart=always
RestartSec=10
TimeoutStartSec=90

ExecStartPre=-/usr/bin/podman rm -f hotstack-os-nova-novncproxy
ExecStart=/usr/bin/podman run \
    --pull=never \
    --name hotstack-os-nova-novncproxy \
    --hostname nova-novncproxy \
    --network hotstack-os \
    --ip __NOVA_NOVNCPROXY_IP__ \
    --env NOVA_DB_PASSWORD=__DB_PASSWORD__ \
    --env SERVICE_PASSWORD=__SERVICE_PASSWORD__ \
    --env RABBITMQ_USER=__RABBITMQ_DEFAULT_USER__ \
    --env RABBITMQ_PASS=__RABBITMQ_DEFAULT_PASS__ \
    --env REGION_NAME=__REGION_NAME__ \
    --volume __HOTSTACK_DATA_DIR__/runtime/config/nova/nova.conf:/etc/nova/nova.conf:ro,z \
    --entrypoint /usr/local/bin/nova-novncproxy-entrypoint.sh \
    localhost/hotstack-os-nova:latest

# Health check: CONTAINER INTERVAL TIMEOUT RETRIES START_PERIOD COMMAND
ExecStartPost=/usr/local/bin/hotstack-healthcheck.sh hotstack-os-nova-novncproxy 10 5 5 20 sh -c "test -f /proc/1/exe && ss -tln | grep -q :6080"
ExecStop=/usr/bin/podman stop -t 10 hotstack-os-nova-novncproxy
ExecStopPost=-/usr/bin/podman rm -f hotstack-os-nova-novncproxy

StandardOutput=journal
StandardError=journal

[Install]
WantedBy=hotstack-os.target
