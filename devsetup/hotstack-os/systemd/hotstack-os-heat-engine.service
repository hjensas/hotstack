[Unit]
Description=HotStack-OS Heat Engine Service
Documentation=https://github.com/openstack-k8s-operators/hotstack
After=hotstack-os-heat-api.service
Requires=hotstack-os-heat-api.service
PartOf=hotstack-os.target

[Service]
Type=simple
Restart=always
RestartSec=10

ExecStartPre=-/usr/bin/podman rm -f hotstack-os-heat-engine
ExecStart=/usr/bin/podman run \
    --pull=never \
    --name hotstack-os-heat-engine \
    --hostname heat-engine \
    --network hotstack-os \
    --ip __HEAT_ENGINE_IP__ \
    --env HEAT_DB_PASSWORD=__DB_PASSWORD__ \
    --env SERVICE_PASSWORD=__SERVICE_PASSWORD__ \
    --env RABBITMQ_USER=__RABBITMQ_DEFAULT_USER__ \
    --env RABBITMQ_PASS=__RABBITMQ_DEFAULT_PASS__ \
    --env REGION_NAME=__REGION_NAME__ \
    --volume __HOTSTACK_DATA_DIR__/runtime/config/heat/heat.conf:/etc/heat/heat.conf:ro,z \
    --entrypoint /usr/local/bin/heat-engine-entrypoint.sh \
    localhost/hotstack-os-heat:latest

# Health check: CONTAINER INTERVAL TIMEOUT RETRIES START_PERIOD COMMAND
ExecStartPost=/usr/local/bin/hotstack-healthcheck.sh hotstack-os-heat-engine 10 5 10 20 test -f /proc/1/exe
ExecStop=/usr/bin/podman stop -t 10 hotstack-os-heat-engine
ExecStopPost=-/usr/bin/podman rm -f hotstack-os-heat-engine

StandardOutput=journal
StandardError=journal

[Install]
WantedBy=hotstack-os.target
