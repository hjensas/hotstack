[Unit]
Description=HotStack-OS Memcached Service
Documentation=https://github.com/openstack-k8s-operators/hotstack
After=hotstack-os-infra-setup.service
Requires=hotstack-os-infra-setup.service
PartOf=hotstack-os.target

[Service]
Type=simple
Restart=always
RestartSec=10

ExecStartPre=-/usr/bin/podman rm -f hotstack-os-memcached
ExecStart=/usr/bin/podman run \
    --name hotstack-os-memcached \
    --network hotstack-os \
    --ip __MEMCACHED_IP__ \
    docker.io/library/memcached:1.6-alpine \
    memcached -m 64

# Health check: CONTAINER INTERVAL TIMEOUT RETRIES START_PERIOD COMMAND
ExecStartPost=/usr/local/bin/hotstack-healthcheck.sh hotstack-os-memcached 10 5 3 0 nc -z localhost 11211
ExecStop=/usr/bin/podman stop -t 10 hotstack-os-memcached
ExecStopPost=-/usr/bin/podman rm -f hotstack-os-memcached

StandardOutput=journal
StandardError=journal

[Install]
WantedBy=hotstack-os.target
