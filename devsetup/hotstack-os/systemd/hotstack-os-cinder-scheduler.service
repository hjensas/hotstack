[Unit]
Description=HotStack-OS Cinder Scheduler Service
Documentation=https://github.com/openstack-k8s-operators/hotstack
After=hotstack-os-cinder-api.service
Requires=hotstack-os-cinder-api.service
PartOf=hotstack-os.target

[Service]
Type=simple
Restart=always
RestartSec=10

ExecStartPre=-/usr/bin/podman rm -f hotstack-os-cinder-scheduler
ExecStart=/usr/bin/podman run \
    --pull=never \
    --name hotstack-os-cinder-scheduler \
    --hostname cinder-scheduler \
    --network hotstack-os \
    --ip __CINDER_SCHEDULER_IP__ \
    --env CINDER_DB_PASSWORD=__DB_PASSWORD__ \
    --env SERVICE_PASSWORD=__SERVICE_PASSWORD__ \
    --env RABBITMQ_USER=__RABBITMQ_DEFAULT_USER__ \
    --env RABBITMQ_PASS=__RABBITMQ_DEFAULT_PASS__ \
    --env REGION_NAME=__REGION_NAME__ \
    --volume __HOTSTACK_DATA_DIR__/runtime/config/cinder/cinder.conf:/etc/cinder/cinder.conf:ro,z \
    --entrypoint /usr/local/bin/cinder-scheduler-entrypoint.sh \
    localhost/hotstack-os-cinder:latest

# Health check: CONTAINER INTERVAL TIMEOUT RETRIES START_PERIOD COMMAND
ExecStartPost=/usr/local/bin/hotstack-healthcheck.sh hotstack-os-cinder-scheduler 10 5 5 20 test -f /proc/1/exe
ExecStop=/usr/bin/podman stop -t 10 hotstack-os-cinder-scheduler
ExecStopPost=-/usr/bin/podman rm -f hotstack-os-cinder-scheduler

StandardOutput=journal
StandardError=journal

[Install]
WantedBy=hotstack-os.target
