[Unit]
Description=HotStack-OS Heat API Service
Documentation=https://github.com/openstack-k8s-operators/hotstack
After=hotstack-os-mariadb.service hotstack-os-rabbitmq.service hotstack-os-keystone.service hotstack-os-dnsmasq.service hotstack-os-haproxy.service
Requires=hotstack-os-mariadb.service hotstack-os-rabbitmq.service hotstack-os-keystone.service hotstack-os-dnsmasq.service hotstack-os-haproxy.service
PartOf=hotstack-os.target

[Service]
Type=simple
Restart=always
RestartSec=10

ExecStartPre=-/usr/bin/podman rm -f hotstack-os-heat-api
ExecStart=/usr/bin/podman run \
    --pull=never \
    --name hotstack-os-heat-api \
    --hostname heat \
    --network hotstack-os \
    --ip __HEAT_API_IP__ \
    --env HEAT_DB_PASSWORD=__DB_PASSWORD__ \
    --env SERVICE_PASSWORD=__SERVICE_PASSWORD__ \
    --env KEYSTONE_ADMIN_PASSWORD=__KEYSTONE_ADMIN_PASSWORD__ \
    --env RABBITMQ_USER=__RABBITMQ_DEFAULT_USER__ \
    --env RABBITMQ_PASS=__RABBITMQ_DEFAULT_PASS__ \
    --env REGION_NAME=__REGION_NAME__ \
    --volume __HOTSTACK_DATA_DIR__/runtime/config/heat/heat.conf:/etc/heat/heat.conf:ro,z \
    --entrypoint /usr/local/bin/heat-api-entrypoint.sh \
    localhost/hotstack-os-heat:latest

# Health check: CONTAINER INTERVAL TIMEOUT RETRIES START_PERIOD COMMAND
ExecStartPost=/usr/local/bin/hotstack-healthcheck.sh hotstack-os-heat-api 10 5 5 5 curl -f http://localhost:8004/
ExecStop=/usr/bin/podman stop -t 10 hotstack-os-heat-api
ExecStopPost=-/usr/bin/podman rm -f hotstack-os-heat-api

StandardOutput=journal
StandardError=journal

[Install]
WantedBy=hotstack-os.target
